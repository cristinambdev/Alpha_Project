

@model Business.Models.UserResult // suggested by Chat gpt as it is the model type that the action method in controller was passing

@if (Model != null && Model.Result != null && Model.Result.Any())
{
    @foreach (var member in Model.Result)
    {
        <div class="card-member surface">
            <i class="fa-solid fa-ellipsis" aria-controls="dropdown-menu-member" aria-expanded="false"></i>
            <div class="member-card-avatar"><img src="~/images/Avatar_2_big.svg" alt="member avatar" /></div>
            <h4 class="name">@member.FirstName @member.LastName</h4>
            <div class="jobtitle">Chief Executive Officer</div>
            <div class="email">@member.Email</div>
            <div class="phone">+46 070-123 45 78</div>
            <button class="btn btn-gray">Message</button>
        </div>
    }
}
else
{
    <p>No members found.</p>
}