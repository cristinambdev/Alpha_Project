@model ProjectViewModel


    <div class="project card" data-project-id="@Model.Id">
        <div class="card-header">

          <div class="project-image">
            <img src="/@Model.Clients.FirstOrDefault()?.Image" alt="client-image" />
           </div>
                <span class="client-name">@Model.Clients.FirstOrDefault()?.ClientName</span>
           

        <h6 class="project-name">@Model.ProjectName</h6>


            <div id="project-actions-container">
            <button type="button" data-type="dropdown" data-target="#projectDropdown-@Model.Id" class="btn-action">
                    <i class="fa-solid fa-ellipsis"></i>
                </button>

            <div class="dropdown dropdown-project" id="projectDropdown-@Model.Id">
                    @await Html.PartialAsync("Dropdowns/_ProjectDropdownPartial")
                </div>
            </div>
        </div>

        <div class="card-body">
        <p>@Html.Raw(@Model.Description)</p>
        </div>

        <div class="card-footer">
            <div class="project-time warning">
                <i class="fa-regular fa-clock"></i>
            <div class="deadline">@Model.TimeLeft</div>
            </div>

            <div class="members">
            @foreach (var user in @Model.Users)
                {
                    <div class="user-image">
                        <img src="@user.UserImage" alt="member-avatar" />
                    </div>
                }
            </div>
        </div>
   </div> 

