@model SignInViewModel

@{
    Layout = "_CleanLayout";

    ViewData["Title"] = "Log In";
}

<section id="login" class="card">

    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
    </div>

 

    <div class="card-body">
        <a asp-controller="Auth" asp-action="ExternalSignIn" asp-route-provider="Google" asp-route-returnUrl="@ViewBag.ReturnUrl"
            class="btn btn-external">
            <img src="~/images/icon_google.svg" />
            <span>Log in with Google</span>
        </a>
        <div class="divider"> <span>or</span></div>


        <form novalidate asp-controller="Auth" asp-action="SignIn" class="no-ajax" method="post" enctype="multipart/form-data">
           
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

       
            <div class="form-group">
                <label class="form-label" asp-for="Email"></label>
                <input class="form-input" asp-for="Email" />

            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Password"></label>
                <input class="form-input" asp-for="Password" />

            </div>

            <div class="form-group-checkbox">
                <label class="form-checkbox">
                    <input type="checkbox" class="form-checkbox-input" id="ispersistent-checkbox" asp-for="IsPersistent" checked />
                    <span class="checkbox-box"></span>
                </label>
                <label for="ispersistent-checkbox" asp-for="IsPersistent" class="checkbox-label">Remember me <a href="#">Forgot Password?</a></label>
            
            </div>

            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage as string))
            {
                <div class="alert-notification error">
                    @ViewBag.ErrorMessage
                    </div>
            }



            <div class="form-group">
                <button type="submit" class="btn btn-submit btn-blue">Log in</button>
            </div>

        
        </form>
        <div class="card-footer">
            <span>Don't have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
        </div>
    </div>


</section>

